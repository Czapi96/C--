int main()
{
    int dzialanie;

    do
    {

        cout << "++++++++++++++++++++++" << endl;
        cout << "+====================+" << endl;
        cout << "+=Podaj nr dzialania=+" << endl;
        cout << "+====================+" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+ 1) Dodawanie       +" << endl;
        cout << "+ 2) Odejmowanie     +" << endl;
        cout << "+ 3) Mnozenie        +" << endl;
        cout << "+ 4) Dzielenie       +" << endl;
        cout << "+ 0) Wyjscie         +" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cin >> dzialanie;
        switch ( dzialanie )
        {
        case 1:
        dodawanie();
        break;
        case 2:
        odejmowanie();
        break;
        case 3:
        mnozenie();
        break;
        case 4:
        dzielenie();
        break;
        }
    } while( dzialanie != 0 );
        cout << "++++++++++++++++++++++" << endl;
        cout << "+====================+" << endl;
        cout << "+=    DOWIDZENIA    =+" << endl;
        cout << "+====++==============+" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+ 1) Dodawanie       +" << endl;
        cout << "+ 2) Odejmowanie     +" << endl;
        cout << "+ 3) Mnozenie        +" << endl;
        cout << "+ 4) Dzielenie       +" << endl;
        cout << "+ 0) Odejmowanie     +" << endl;
        cout << "++++++++++++++++++++++" << endl;

    return 0;
}
