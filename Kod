#include <iostream>
#include <cstdlib>
#include <conio.h>

using namespace std;


void dodawanie()
{
int liczba1;
int liczba2;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+====================+" << endl;
        cout << "+=  Podaj 1 liczbe  =+" << endl;
        cout << "+====================+" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+   [1]  [2]  [3]    +" << endl;
        cout << "+   [4]  [5]  [6]    +" << endl;
        cout << "+   [7]  [8]  [9]    +" << endl;
        cout << "+   [+]  [0]  [-]    +" << endl;
        cout << "+   [/]  [=]  [*]    +" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cin >> liczba1;
        system("cls");
        cout << "++++++++++++++++++++++" << endl;
        cout << "+====================+" << endl;
        cout << "+=  Podaj 2 liczbe  =+" << endl;
        cout << "+====================+" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+   [1]  [2]  [3]    +" << endl;
        cout << "+   [4]  [5]  [6]    +" << endl;
        cout << "+   [7]  [8]  [9]    +" << endl;
        cout << "+   [+]  [0]  [-]    +" << endl;
        cout << "+   [/]  [=]  [*]    +" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cin >> liczba2;
        system("cls");
        cout << "++++++++++++++++++++++" << endl;
        cout << "+====================+" << endl;
        cout << "+  " << liczba1+liczba2  << endl;
        cout << "+====================+" << endl;
        cout << "++++++++++++++++++++++" << endl;
        cout << "+   [1]  [2]  [3]    +" << endl;
        cout << "+   [4]  [5]  [6]    +" << endl;
        cout << "+   [7]  [8]  [9]    +" << endl;
        cout << "+   [+]  [0]  [-]    +" << endl;
        cout << "+   [/]  [=]  [*]    +" << endl;
        cout << "++++++++++++++++++++++" << endl;
        system("pause");
        system("cls");
}
